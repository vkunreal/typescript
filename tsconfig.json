{
  "compilerOptions": {
    "target": "esnext",           
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "watch": true,
    "outDir": "./dist",
    "resolveJsonModule": true
  },
